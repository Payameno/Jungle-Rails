<section class="orders-show">

  <header class="page-header">
    <h1>Order <%= @order.id %></h1>
  </header>

  <div class="panel panel-default products">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Orders</th>
        <th>Item price</th>
        <th>Quantity</th>
        <th>Item totals</th>
      </tr>
    </thead>
    <tbody>
  <% @order.line_items.each do |item| %>      
  <%= render 'item', product: item.product, quantity: item[:quantity].to_i, item_price: item[:item_price_cents], item_totals: item[:total_price_cents] %>    
  <% end %> 
    </tbody>
     <tr>
      <th>Email:</th>
     <td>
      <h4><%= @order.email %></h4>
     </td>
     <th>Total:</th>
     <td>
      <h4><%= humanized_money_with_symbol @order.total_cents / 100.0 %></h4>
     </td>
    </tr>
  </table>
</div>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
